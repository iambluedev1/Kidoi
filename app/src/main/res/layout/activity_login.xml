<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_kidoi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="70dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        android:text="@string/app_name"
        android:textColor="@color/yellow"
        />

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toTopOf="@id/tv_kidoi"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Email"
        android:textSize="@dimen/size_Description1"/>

    <EditText
        android:id="@+id/et_email"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:inputType="textEmailAddress"
        app:layout_constraintTop_toTopOf="@id/tv_email"
        app:layout_constraintLeft_toLeftOf="@id/tv_email"
        android:textSize="@dimen/size_Description2"/>

    <TextView
        android:id="@+id/tv_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/et_email"
        app:layout_constraintLeft_toLeftOf="@id/et_email"
        android:layout_marginTop="100dp"
        android:text="Mot de passe"
        android:textSize="@dimen/size_Description1" />

    <EditText
        android:id="@+id/et_pwd"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="@id/tv_pwd"
        app:layout_constraintLeft_toLeftOf="@id/tv_pwd"
        android:inputType="textPassword"
        android:textSize="@dimen/size_Description2"/>





    <Button
        android:id="@+id/btn_connexion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toTopOf="@id/et_pwd"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Connexion"
        android:textSize="@dimen/size_Description1"/>

</androidx.constraintlayout.widget.ConstraintLayout>